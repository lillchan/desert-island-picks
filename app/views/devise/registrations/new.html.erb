  <div class="container-fluid">
      <div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<form class="form-inline" role="form">
<div class="form-group">
  <div><%= f.label :email. :html => {:class => "sr-only"} %><br />
  <%= f.email_field :email, autofocus: true, :html => {:class => "form-control", :placeholder => "Enter Email"} %></div>

  <div><%= f.label :password, :html => {:class => "sr-only"} %><br />
    <%= f.password_field :password, autocomplete: "off", :html => {:class => "form-control", :placeholder => "Password"} %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Sign up" :html => {:class => "btn btn-default" %></div>
<% end %>
</div>
</form>
</div>
</div>


